{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "allowJs": true,
    "experimentalDecorators": true,
    "jsx": "react-jsx",
    "jsxImportSource": "astal/gtk4",
    "lib": [
      "ES2023",
      "ESNext.Collection"
    ],
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "noImplicitAny": false,
    "paths": {
      "astal": [
        "/usr/share/astal/gjs/"
      ],
      "astal/*": [
        "/usr/share/astal/gjs/*"
      ]
    },
    "strict": true,
    "target": "ES2022"
  }
}
